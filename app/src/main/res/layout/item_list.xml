<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvId"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"/>
        <TextView
            android:id="@+id/tvEmail"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"/>
        <TextView
            android:id="@+id/tvLevel"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="level"/>
        <TextView
            android:id="@+id/tvPw"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pw"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="80dp"
            android:text="이름 : " />

        <TextView
            android:id="@+id/tvName2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvName"
            android:layout_toRightOf="@id/tvName"
            android:layout_marginLeft="10dp"
            android:text="홍길동" />

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="전화번호 : " />

        <TextView
            android:id="@+id/tvPhoneNumber2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvPhoneNumber"
            android:layout_toRightOf="@id/tvPhoneNumber"
            android:layout_marginLeft="10dp"
            android:text="010-1111-1111" />
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvName"
            android:layout_alignTop="@id/tvName"
            android:layout_marginStart="150dp"
            android:text="주소 : " />

        <TextView
            android:id="@+id/tvAddress2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvAddress"
            android:layout_toRightOf="@id/tvAddress"
            android:layout_marginLeft="10dp"
            android:text="010-1111-1111" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>